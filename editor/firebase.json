{
  "hosting": {
    "target": "maria-editor",
    "public": "public",
    "ignore": [
      "js/compiled/out**",
      "js/compiled/cljs-runtime/**",
      "js/compiled/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0, s-maxage=604800"
          }
        ]
      },
      {
        "source":
        "**/*.@(jpg|jpeg|gif|png|svg|webp|wasm|js|css|eot|otf|ttf|ttc|woff|woff2|font.css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          }
        ]
      }
    ]
  }
}
